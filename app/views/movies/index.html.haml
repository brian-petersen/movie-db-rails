/ #header
/   %input#search{ name: :search, type: :text }

/ .wrapper
%ul.movies
  - @movies.each do |movie|
    %li.movie
      = link_to order_movie_path(movie), class: 'movie-link' do
        = image_tag movie.poster.url(:sized)
        .overlay
          %h2.movie-title= movie.title
          %p.movie-description= movie.description
